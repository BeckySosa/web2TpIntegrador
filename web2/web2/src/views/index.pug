

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="style.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
    title Practico Integrador
  body
     
    .principal
      h1 Museo Metropolitano de Arte    
      .buscador
        form(action="/search" method="get")
          label(for="id_departamento") 
            strong Departamento:
          select(name="departmentId" id="id_departamento")
            option(value="") Elija una opcion
            each department in departmentsTraducidos
              option(value= department.departmentId) #{department.displayName}
          label(for="clave") 
            strong Clave:
          input(type="text" name="keyword" id="clave")
          label(for="location") 
            strong Ubicaci√≥n:
          input(type="text" name="location" id="ubicacion")
          button.btn.btn-primary(type="submit") Buscar
     
    script(src="function.js")




